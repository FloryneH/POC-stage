{% extends 'base.html.twig' %}

{% block body %}
{% for article in articles %}
	<div class="card mb-3" style="max-width: 540px;">
		<div class="row g-0">
			<div class="col-md-4">
				{% if article.featuredImage %}
                    <img src="/uploads/{{ article.featuredImage.filename }}" alt="{{ article.featuredImage.altText }}" loading="lazy" class="img-fluid">
                {% endif %}
			</div>
			<div class="col-md-8">
				<div class="card-body">
					<h5 class="card-title">{{article.titre}}</h5>
					<p class="card-text">{{article.featuredText ?: article.content|striptags|slice(0, 130) ~ '...'}}</p>
					<p class="card-text">
						<small class="text-body-secondary">{{article.createdAt|date('d M Y')}}</small>
					</p>
				</div>
			</div>
		</div>
	</div>
{% endfor %}
{% endblock %}
